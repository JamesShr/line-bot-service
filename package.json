{
  "name": "line-bot-service",
  "private": true,
  "version": "1.0.0",
  "description": "taoyuan streetlight repair chatbot",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:dev:docker": "docker-compose -p line-bot-service up --build",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "stop": "docker-compose down",
    "mg:gn": "ts-node ./node_modules/typeorm/cli.js migration:generate -n allSchema",
    "mg:cr": "typeorm migration:create -n [EnterMigrateName]",
    "mg:up": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "mg:dw": "ts-node ./node_modules/typeorm/cli.js migration:revert",
    "old:start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node -r module-alias/register dist/src/main.js\"",
    "old:lint": "tsc --noEmit && eslint '{src,test}/**/*.ts' --quiet",
    "old:dev": "ts-node -r tsconfig-paths/register main.ts",
    "broker": "ts-node utils/broker/mqttServer.ts"
  },
  "dependencies": {
    "@nestjs/common": "^6.10.5",
    "@nestjs/core": "^6.10.5",
    "@nestjs/microservices": "^6.10.8",
    "@nestjs/platform-express": "^6.10.5",
    "@nestjs/platform-socket.io": "^6.10.8",
    "@nestjs/typeorm": "^6.2.0",
    "@nestjs/websockets": "^6.10.8",
    "@types/config": "0.0.36",
    "@types/express-session": "^1.15.16",
    "@types/morgan": "^1.7.37",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "class-transformer": "^0.2.3",
    "config": "^3.2.2",
    "connect-redis": "^4.0.3",
    "cookie-parser": "^1.4.4",
    "ejs": "^3.0.1",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-import-resolver-babel-module": "^5.1.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.18.2",
    "express-session": "^1.17.0",
    "form-data": "^3.0.0",
    "helmet": "^3.21.2",
    "module-alias": "^2.2.2",
    "morgan": "^1.9.1",
    "mosca": "^2.8.3",
    "mqtt": "^3.0.0",
    "mysql": "^2.17.1",
    "nest-morgan": "^1.0.1",
    "pg": "^7.14.0",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "socket.io": "^2.3.0",
    "socket.io-redis": "^5.2.0",
    "tsc-watch": "^4.0.0",
    "typeorm": "^0.2.20",
    "typescript-eslint-parser": "^22.0.0",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@nestjs/cli": "^6.12.7",
    "@nestjs/schematics": "^6.7.5",
    "@nestjs/testing": "^6.10.5",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "@types/socket.io": "^2.1.4",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "8.1.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "_moduleAliases": {
    "@": "dist/src"
  }
}
